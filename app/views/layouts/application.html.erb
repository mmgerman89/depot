<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", media: "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshlef" %>
	</div>
	<div id="columns">
		<div id="side">
			<div id="cart">
				<%= render @cart %>
			</div>
			
			<a href="#">Home</a><br />
			<a href="#">Questions</a><br />
			<a href="#">News</a><br />
			<a href="#">Contact</a><br />
			<p><%= date_loaded %></p>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
